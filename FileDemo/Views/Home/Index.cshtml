@model attachmentModel
@{
    ViewData["Title"] = "Home Page";
}

<form method="post" enctype="multipart/form-data">
     <div class="row">
        <div class="form-group col-md-3">
            <label>File Name</label>
            <input class="form-control form-control-md" placeholder="File Name" asp-for="FileName" required />
        </div>
        <div class="form-group col-md-3">
            <label>File Description</label>
            <input class="form-control form-control-md" placeholder="Description" asp-for="Description" required />
        </div>
        <div class="form-group col-md-3">
            <label>Attachment</label>
            <input class="form-control form-control-md" placeholder="Attachment" asp-for="attachment" required />
        </div>
        <div class="form-group col-md-3">
            <label>``</label>
            <div>
            <button class="btn btn-primary btn-md btn-block" type="submit">Submit</button>
            </div>
        </div>
     </div>
</form>

<div class="row">
    <table class="table table-hover">
        <thead>
            <th>ID</th>
            <th>FileName</th>
            <th>Description</th>
            <th></th>
            @*<th></th>*@
        </thead>
        <tbody>
            @if(Model != null)
            {
                @foreach(var row in Model.attachments)
                {
                    <tr>
                        <td>@row.ID</td>
                        <td>@row.FileName</td>
                        <td>@row.Description</td>
                        <td><a class="btn btn-primary" asp-action="GetAttachment" asp-controller="Home" asp-route-ID="@row.ID" target="./">View</a></td>
                        @*<td><a class="btn btn-primary" asp-action="GetFileStreamResultDemo" asp-controller="Home" asp-route-ID="@row.FileName">Download</a></td>*@
                    </tr>
                }
            }
        </tbody>
    </table>
</div>